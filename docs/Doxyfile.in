# --- Input / parsing ---
PROJECT_NAME           = SolverLES
INPUT                  = @CMAKE_SOURCE_DIR@/src
FILE_PATTERNS          = *.hpp *.cpp *.h *.f90
RECURSIVE              = YES
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = YES
EXTRACT_STATIC         = YES
EXTRACT_LOCAL_CLASSES  = YES
EXTRACT_ANON_NSPACES   = YES
OPTIMIZE_FOR_FORTRAN   = YES
STRIP_FROM_PATH = @CMAKE_SOURCE_DIR@/src

EXCLUDE_SYMBOLS = main

# --- Output ---
GENERATE_HTML          = NO
GENERATE_XML           = YES
XML_OUTPUT             = xml
OUTPUT_DIRECTORY       = @CMAKE_BINARY_DIR@/docs/_build/doxygen

# --- Misc ---
ENABLE_PREPROCESSING   = YES
MACRO_EXPANSION        = YES
EXPAND_ONLY_PREDEF     = NO
PREDEFINED             = HAVE_MPI
WARN_IF_UNDOCUMENTED   = YES
QUIET                  = YES
HAVE_DOT               = YES
DOT_IMAGE_FORMAT       = svg
DOT_GRAPH_MAX_NODES    = 64

# Allows to embed ReST inside Doxygen comments (handles leading '*')
MARKDOWN_SUPPORT       = YES
ALIASES               += "rst=\verbatim embed:rst:leading-asterisk"
ALIASES               += "endrst=\endverbatim"
